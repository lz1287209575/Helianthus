@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# 查找依赖
find_dependency(spdlog REQUIRED)
find_dependency(nlohmann_json REQUIRED)
find_dependency(ZLIB REQUIRED)
find_dependency(OpenSSL REQUIRED)

# 可选依赖
find_dependency(hiredis QUIET)
